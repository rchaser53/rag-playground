# OpenAI
OPENAI_API_KEY=
CHAT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Embeddings provider: openai | localhash
# - openai: OpenAI Embeddingsを利用
# - localhash: 外部APIなしの簡易Embedding（動作確認用。精度は低い）
EMBEDDINGS_PROVIDER=openai

# LLM provider: openai | gemini
LLM_PROVIDER=openai

# Gemini (Google GenAI)
GEMINI_API_KEY=
GEMINI_CHAT_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# 429回避のための調整（遅くなる代わりに安定させる）
# - REQUEST_SPACING_MS: 各API呼び出し前に必ず待つ時間
# - MAX_RETRIES: 429/一時エラー時の最大リトライ回数
# - INITIAL_BACKOFF_MS/MAX_BACKOFF_MS: バックオフ
# - EMBEDDINGS_BATCH_SIZE: Embeddingの分割バッチサイズ
REQUEST_SPACING_MS=1500
MAX_RETRIES=8
INITIAL_BACKOFF_MS=1500
MAX_BACKOFF_MS=20000
EMBEDDINGS_BATCH_SIZE=8

# Chroma
CHROMA_URL=http://localhost:8000
CHROMA_COLLECTION=shikiho

# Ingest
SHIKIHO_RAW_DIR=./data/shikiho/raw
